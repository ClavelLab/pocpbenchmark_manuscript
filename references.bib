@article{liuEnlighteningTaxonomyDarkness2021,
  title = {Enlightening the Taxonomy Darkness of Human Gut Microbiomes with a Cultured Biobank},
  author = {Liu, Chang and Du, Meng-Xuan and Abuduaini, Rexiding and Yu, Hai-Ying and Li, Dan-Hua and Wang, Yu-Jing and Zhou, Nan and Jiang, Min-Zhi and Niu, Peng-Xia and Han, Shan-Shan and Chen, Hong-He and Shi, Wen-Yu and Wu, Linhuan and Xin, Yu-Hua and Ma, Juncai and Zhou, Yuguang and Jiang, Cheng-Ying and Liu, Hong-Wei and Liu, Shuang-Jiang},
