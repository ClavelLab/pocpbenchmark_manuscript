@article{sereikaClosedGenomesUncover2023,
  title = {Closed Genomes Uncover a Saltwater Species of {{Candidatus Electronema}} and Shed New Light on the Boundary between Marine and Freshwater Cable Bacteria},
  author = {Sereika, Mantas and Petriglieri, Francesca and Jensen, Thomas Bygh Nymann and Sannikov, Artur and Hoppe, Morten and Nielsen, Per Halkjær and Marshall, Ian P G and Schramm, Andreas and Albertsen, Mads},
